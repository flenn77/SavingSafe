{% extends 'base.html.twig' %}

{% block title %}Facture N° {{ invoice.invoiceNumber }}{% endblock %}

{% block body %}

<h2>Facture N° {{ invoice.invoiceNumber }}</h2>
<p>Date: {{ invoice.invoiceDate|date('d/m/Y') }}</p>
<p>Montant: {{ invoice.amount }} €</p>
<p>User: {{ invoice.user.username }}</p> <!-- Supposant que vous avez un champ 'username' dans l'entité User -->

{% endblock %}
