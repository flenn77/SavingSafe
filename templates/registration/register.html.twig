{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-info mt-4">
                <div class="card-header bg-info text-white">Inscription</div>
                <div class="card-body">
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                        
                        <div class="form-group mb-3">
                            <label>Email :</label>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                        <div class="form-group mb-3">
                            <label>Pr√©nom et Nom :</label>
                            {{ form_widget(registrationForm.full_name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        {{ form_row(registrationForm.phone_number, {'attr': {'class': 'form-control mb-3'}}) }}
                        
                        {{ form_row(registrationForm.adress, {'attr': {'class': 'form-control mb-3'}}) }}
                        
                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(registrationForm.postal_code, {'attr': {'class': 'form-control', 'maxlength': '5'}}) }}
                                </div>
                            </div>
                        </div>

                        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control mb-3'}}) }}
                        
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check mb-3'}}) }}
                        
                        <button type="submit" class="btn btn-info">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
