{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        Email : {{ form_widget(registrationForm.email) }}
        Pr√©nom et Nom :{{ form_widget(registrationForm.full_name) }}
        {{ form_row(registrationForm.phone_number) }}
        {{ form_row(registrationForm.adress) }} 
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.postal_code) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
